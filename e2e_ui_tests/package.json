{
  "name": "accounting-app-e2e-tests",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "End-to-end UI tests for the accounting application",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:auth": "playwright test specs/auth/",
    "test:category": "playwright test specs/category.spec.ts",
    "test:expense": "playwright test specs/expense.spec.ts",
    "test:mobile": "playwright test --project=Mobile Chrome --project=Mobile Safari",
    "test:api": "playwright test specs/api-example.spec.ts"
  },
  "dependencies": {
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/node": "^22.10.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22",
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "accounting",
    "api-testing"
  ],
  "author": "Accounting App Team",
  "license": "MIT"
}

