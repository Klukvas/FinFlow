# Production Environment Configuration
# Copy this file to .env on your app server and fill in the values

# Database Configuration (from Terraform outputs)
# Use: terraform output -raw db_host
DB_HOST=10.10.0.3
# Use: terraform output -raw db_port
DB_PORT=5432
# Use: terraform output -raw db_user
DB_USER=appuser
# Use: terraform output -raw db_name
DB_NAME=appdb
# Use: terraform output -raw db_password
DB_PASSWORD=your_generated_password_here

# JWT Configuration
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# CORS Configuration
# Add your domain(s) here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://www.yourdomain.com

# Container Registry (optional)
# For GitHub Container Registry:
REGISTRY=ghcr.io
IMAGE_PREFIX=yourusername
TAG=latest

# Or for Docker Hub:
# REGISTRY=docker.io
# IMAGE_PREFIX=yourusername
# TAG=latest

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=production

# Redis Configuration (internal)
REDIS_HOST=redis
REDIS_PORT=6379

